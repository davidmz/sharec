{
  "homapage": "https://sharec.js.org",
  "author": "Konstantin Epishev <lamartire@gmail.com>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint 'packages/**/*.js'",
    "fxt:json": "hygen fixture-json with-prompt",
    "fxt:yaml": "hygen fixture-yaml with-prompt",
    "fxt:lines": "hygen fixture-lines with-prompt"
  },
  "lint-staged": {
    "packages/**/*.js": [
      "eslint --fix"
    ],
    "packages/**/*.d.ts": [
      "prettier --write"
    ],
    "packages/**/*.{json,ya?ml,css,html,md}": [
      "prettier --write"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120
  },
  "eslintConfig": {
    "env": {
      "commonjs": true,
      "jest": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "parser": "@typescript-eslint/parser",
    "extends": [
      "standard"
    ],
    "globals": {
      "context": true
    }
  },
  "eslintIgnore": [
    "/node_modules/",
    "packages/sharec-nanomatch/examples/**/*"
  ],
  "devDependencies": {
    "@typescript-eslint/parser": "^4.7.0",
    "eslint": "^7.0.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "gh-pages": "^3.1.0",
    "hygen": "^6.0.4",
    "json8": "^1.0.3",
    "lerna": "^3.18.4",
    "lint-staged": "^10.2.2",
    "lodash": "^4.17.20",
    "prettier": "^2.0.5",
    "simple-git-hooks": "^2.4.1",
    "typescript": "^4.0.5"
  },
  "sharec": {
    "ignore": true
  }
}
